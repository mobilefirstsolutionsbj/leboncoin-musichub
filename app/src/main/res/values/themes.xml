<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicHub" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MusicHub.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MusicHub.Background">
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="Theme.MusicHub.TextColorPrimary">
        <item name="backgroundColor">@color/black</item>
    </style>

    <style name="Theme.MusicHub.DrawableTintColor">
        <item name="android:tintMode">src_atop</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="Theme.MusicHub.TrackSeparatorColor">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Theme.MusicHub.LaunchFooter" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

</resources>
